<%- model_class = Comment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:author_id) %>:</strong></dt>
  <dd><%= @comment.author.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:issue_id) %>:</strong></dt>
  <dd><%= link_to @comment.issue.name, milestone_issue_path(@milestone, @comment.issue) %></dd>
  <dt><strong>Working:</strong></dt>
  <dd><%= @comment.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @comment.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              milestone_issue_comments_path(@milestone, @issue), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_milestone_issue_comment_path(@milestone, @issue, @comment), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              milestone_issue_comment_path(@milestone, @issue, @comment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
