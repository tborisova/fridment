<%= form_for [@milestone, @issue], :html => { :class => "form-horizontal issue" } do |f| %>

  <% if @issue.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @issue.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date_from, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= date_field_tag :date_from  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :date_to, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= date_field_tag :date_to  %>
    </div>
  </div>

  <%= f.hidden_field :milestone_id, :class => 'form-control', value: @milestone.id %>
    

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                milestone_issues_path(@milestone), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
